#version 450

layout(binding = 0) buffer ImageSSBOInOut {
    uint pixels[ ];
};

layout(local_size_x = 1024, local_size_y = 1, local_size_z = 1) in;
void main() {
    uint index = gl_GlobalInvocationID.x;
    if (index > pixels.length()) return;

    uint gray = pixels[index] / 3;
    pixels[index] = gray;
}
